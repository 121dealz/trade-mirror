﻿<Window x:Class="RemoteAdministrator.DeleteUserConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeleteUserConfirmation"
        Background="Black"
        Height="120" Width="361" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen">
        <Grid>
            
            <Label Name="MessageBoxLabel"
               Foreground="White" Content="Do you really wish to delete this user?"
               Margin="0,7,0,44"
               HorizontalAlignment="Center">
            </Label>
            
            <Button Height="35" Width="125"
                Margin="15,43,159,3"
                Content="YES" 
                Click="YesButtonClicked"
                Foreground="White">
            </Button>
            
            <Button Height="35" Width="125"
                Margin="158,42,15,4"
                Content="NO" 
                Click="NoButtonClicked"
                Foreground="White">
            </Button>
            
        </Grid>
</Window>
