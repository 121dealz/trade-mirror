<Window x:Class="UpDownSingnalsClientTerminal.Views.ClientTerminal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="UpDown Signals Client Terminal" 
        Height="385" 
        Width="380"
        ResizeMode="CanMinimize">

    <Grid Width="360" Height="345" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.85*"/>
        </Grid.RowDefinitions>

        <Image 
            Grid.Column="0"
            Grid.ColumnSpan="2" 
            Grid.Row="0" 
            Grid.RowSpan="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Fill" 
            Source="/UpDownSingnalsClientTerminal;component/Resources/Banner.jpg" />

        <Grid 
            Grid.Column="0"
            Grid.ColumnSpan="2" 
            Grid.Row="1" 
            Grid.RowSpan="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="45*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <CheckBox 
                Content="Enable System"
                Grid.Column="0" 
                Grid.ColumnSpan="8" 
                Grid.Row="0" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontFamily="Calibri" 
                FontSize="16"
                Margin="2,2,2,2"
                IsChecked="{Binding IsSystemEnabledChecked}"/>

            <Label 
                Content= "Exit Method:" 
                Grid.Column="1"
                Grid.ColumnSpan="3" 
                Grid.Row="1" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14"
                FontWeight="Bold"/>

            <RadioButton 
                GroupName="ExitMethod"
                Content="After:" 
                Grid.Column="1" 
                Grid.ColumnSpan="2" 
                Grid.Row="2" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14" 
                IsChecked="{Binding IsAfterHoursChecked}"/>
            
            <xctk:TimePicker
                Grid.Column="3" 
                Grid.ColumnSpan="2" 
                Grid.Row="2" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Width="70"
                Height="25"
                Format="Custom"
                FormatString="HH:mm:ss"
                StartTime="00:30:00"
                EndTime="03:00:00"
                TimeInterval="00:01:00"
                ShowButtonSpinner="False"
                BorderBrush="LightBlue"
                BorderThickness="3"
                Value="{Binding ExitAfterHours}"/>

            <Label 
                Content= "Hours" 
                Grid.Column="5"
                Grid.ColumnSpan="1" 
                Grid.Row="2" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14" />

            <RadioButton 
                GroupName="ExitMethod"
                Content="Do nothing. I'll Exit Myself" 
                Grid.Column="1" 
                Grid.ColumnSpan="5" 
                Grid.Row="3" HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                IsChecked="{Binding IsMnaualExitChecked}"
                FontSize="14" 
                Margin="19,8,29,8" />

            <Label 
                Content= "Stop Loss:" 
                Grid.Column="1"
                Grid.ColumnSpan="3" 
                Grid.Row="4" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14" 
                FontWeight="Bold"/>

            <RadioButton 
                GroupName="StopMethod"
                Content="After:" 
                Grid.Column="1" 
                Grid.ColumnSpan="2" 
                Grid.Row="5" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14" 
                IsChecked="{Binding IsAfterStopsChecked}"/>

            <CheckBox 
                Content="Stop Loss"
                Grid.Column="3" 
                Grid.ColumnSpan="3" 
                Grid.Row="5" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14"
                IsChecked="{Binding IsStopLossChecked}"/>

            <xctk:DecimalUpDown
                Grid.Column="5" 
                Grid.ColumnSpan="2" 
                Grid.Row="5" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Height="25"
                FormatString="P2"
                Value="{Binding StopLossBalance}"
                Minimum="0.001"
                Increment="0.0005"
                Maximum="0.05"/>

            <Label 
                Content= "Balance" 
                Grid.Column="6"
                Grid.ColumnSpan="2" 
                Grid.Row="5" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14" />

            <CheckBox 
                Content="Take Profit"
                Grid.Column="3" 
                Grid.ColumnSpan="3" 
                Grid.Row="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14"
                IsChecked="{Binding IsTakeProfitChecked}"/>

            <xctk:DecimalUpDown
                Grid.Column="5" 
                Grid.ColumnSpan="2" 
                Grid.Row="6" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Height="25"
                FormatString="P2"
                Value="{Binding TakeProfitBalance}"
                Minimum="0.001"
                Increment="0.0005"
                Maximum="0.05"/>

            <Label 
                Content= "Balance" 
                Grid.Column="6"
                Grid.ColumnSpan="2" 
                Grid.Row="6" 
                Grid.RowSpan="1" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="14" />

            <RadioButton 
                GroupName="StopMethod"
                Content="Do nothing. I'll Control My Stops" 
                Grid.Column="1" 
                Grid.ColumnSpan="7" 
                Grid.Row="7" 
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                IsChecked="{Binding IsMnaualStopsChecked}"
                FontSize="14" Margin="19,8,29,8" />
        </Grid>

    </Grid>

</Window>
