<Window x:Class="UpDownSingnalsServer.Views.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Waring Message" 
        Background="Black"
        Height="120" Width="385" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Name="MessageBoxLabel"
               Foreground="White" 
               Content="Do you really wish to exit? This will terminate the service."
               FontSize="12"
               FontWeight="Bold"
               Margin="0,7,0,44"
               HorizontalAlignment="Center">

        </Label>
        <Button Height="35" Width="125"
                Margin="15,43,159,3"
                Content="YES" 
                Click="YesButtonClicked"
                Foreground="White">

        </Button>
        <Button Height="35" Width="125"
                Margin="158,42,15,4"
                Content="NO" 
                Click="NoButtonClicked"
                Foreground="White">

        </Button>
    </Grid>
</Window>
